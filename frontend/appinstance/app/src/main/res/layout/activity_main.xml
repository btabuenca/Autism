<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.appinstance.com.example.user.appinstance.MainActivity">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView android:layout_width="0dp" android:layout_weight="1" android:gravity="left"
                android:text="Id" android:layout_height="match_parent" />

            <TextView android:layout_width="0dp" android:layout_weight="5" android:gravity="left"
                android:text="Nombre" android:layout_height="match_parent" />

            <TextView android:layout_width="0dp" android:layout_weight="5" android:gravity="center"
                android:text="Nacionalidad" android:layout_height="match_parent" />

            <TextView android:layout_width="0dp" android:layout_weight="4" android:gravity="center"
                android:text="Foto" android:layout_height="match_parent" />


        </LinearLayout>
        <ListView android:id="@+id/listaJugadores" android:layout_width="match_parent"
            android:layout_height="437dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
